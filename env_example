# rename this file to ".env" and fill in the values

# Set the timezone of the system to avoid problems with the date and time in filenames
TIMEZONE=Europe/Istanbul

# Frigate URL with protocol and port
FRIGATE_URL=http://192.168.0.11:5000

# Upload clips of the last x days
DAYS=1

# Upload directory in Google Drive, will be created automatically in Google Drive
UPLOAD_DIR=frigate

# Google Drive
CREDENTIALS_FILE=credentials/google_drive_credentials.json

# TOKEN_FILE will be created automatically after first run
TOKEN_FILE=credentials/token.json
